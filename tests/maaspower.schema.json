{
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name for this webhook server instance"
    },
    "ip_address": {
      "type": "string",
      "description": "IP address to listen on"
    },
    "port": {
      "type": "integer",
      "description": "port to listen on"
    },
    "username": {
      "type": "string",
      "description": "username for connecting to webhook"
    },
    "password": {
      "type": "string",
      "description": "password for connecting to webhook"
    },
    "devices": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "A name for the switching device"
              },
              "on": {
                "type": "string",
                "description": "command line string to switch device on"
              },
              "off": {
                "type": "string",
                "description": "command line string to switch device off"
              },
              "query": {
                "type": "string",
                "description": "command line string to query device state",
                "default": "none"
              },
              "description": {
                "type": [
                  "string",
                  "null"
                ],
                "description": "A description of the device's purpose",
                "default": ""
              },
              "type": {
                "type": "string",
                "const": "CommandLine",
                "default": "CommandLine"
              }
            },
            "required": [
              "name",
              "on",
              "off"
            ],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "A name for the switching device"
              },
              "on": {
                "type": "string",
                "description": "command line string to switch device on"
              },
              "off": {
                "type": "string",
                "description": "command line string to switch device off"
              },
              "query": {
                "type": "string",
                "description": "command line string to query device state",
                "default": "none"
              },
              "description": {
                "type": [
                  "string",
                  "null"
                ],
                "description": "A description of the device's purpose",
                "default": ""
              },
              "type": {
                "type": "string",
                "const": "SmartThingDevice",
                "default": "SmartThingDevice"
              },
              "api_token": {
                "type": "string",
                "description": "user account's API token for smart things see https://account.smartthings.com/login",
                "default": "none"
              },
              "device_id": {
                "type": "string",
                "description": "The identifier for the individual device",
                "default": "none"
              }
            },
            "required": [
              "name",
              "on",
              "off"
            ],
            "additionalProperties": false
          }
        ]
      },
      "description": "A list of the devices that this webhook server will control"
    }
  },
  "required": [
    "name",
    "ip_address",
    "port",
    "username",
    "password",
    "devices"
  ],
  "additionalProperties": false,
  "$schema": "http://json-schema.org/draft/2020-12/schema#"
}